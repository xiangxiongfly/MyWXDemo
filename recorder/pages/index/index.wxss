.top {
  margin-top: 5vh;
  text-align: center;
  line-height: 15vh;
  color: #333;
}

.top-title {
  font-size: 6vw;
  letter-spacing: .5vw;
}

.top-time {
  font-size: 18vw;
}

.control {
  margin-top: 15vh;
  padding: 5vw;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.btn {
  background-color: #eee;
  color: #aaa;
  width: 18vw;
  height: 18vw;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10vw;
  font-family: Arial, Helvetica, sans-serif;
  transition: all 0.2s;
  opacity: 0.95;
}

.btn-hover {
  transform: scale(0.9);
  opacity: 1;
}

.btn-rec {
  padding: 5vw;
  background-color: #ff1a2b;
  color: #eee;
}

.btn-play::before {
  font-family: "iconfont";
  content: "\e74f";
  font-size: 8vw;
  text-indent: 1vw;
}

.btn-stop::before {
  font-family: "iconfont";
  content: "\e6d8";
}

.btn-rec-normal::before {
  font-family: "iconfont";
  content: "\e714";
  font-size: 14vw;
}

.bent-rec-pause::before {
  font-family: "iconfont";
  content: "\e667";
  font-size: 12vw;
}




@font-face {
  font-family: 'iconfont';
  src: url('data:font/ttf;charset=utf-8;base64,') format('truetype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}