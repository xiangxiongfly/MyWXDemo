.nav {
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav .nav_item {
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
.nav .active {
  border-bottom: 5rpx solid #87ceeb;
}
.slides {
  margin: 10rpx 0;
}
.slides swiper {
  height: 220rpx;
}
.slides swiper image {
  width: 100%;
  height: 100%;
}
.video-wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 5rpx;
}
.video-item {
  width: 48%;
  margin-bottom: 20rpx;
}
.video-img {
  position: relative;
}
.video-img image {
  width: 100%;
  border-radius: 15rpx;
}
.video-img .video-info {
  position: absolute;
  left: 0;
  bottom: 8rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: rgba(0, 0, 0, 0.4);
}
.video-img .video-info text {
  margin-right: 5rpx;
  font-size: 24rpx;
  color: #efefef;
}
.video-title {
  font-size: 28rpx;
  /* 将对象作为弹性伸缩盒子模型显示 */
  display: -webkit-box;
  /* 超出部分隐藏 */
  overflow: hidden;
  /* 显示的行数 */
  -webkit-line-clamp: 2;
  /* 从上到下垂直排列子元素 */
  -webkit-box-orient: vertical;
}

